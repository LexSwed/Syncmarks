{
    "manifest_version": 2,
    "name": "Syncmarks",
    "version": "0.01",
    // "default_locale": "en",

    "description": "Sync your bookmarks with any browser using secure cloud account.",
    "homepage_url": "https://github.com/LexSwed/Syncmarks",

    "icons": {
        "48": "assets/icons/icon48.png",
        "96": "assets/icons/icon96.png"
    },

    "background": {
        "persistent": false,
        "scripts": ["background/background.js"]
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": "assets/icons/icon96.png",
        "default_title": "Syncmarks",
        "default_popup": "popup/popup.html"
    },
    "applications": {
        "gecko": {
            "id": "syncmarks@lexswed",
            "strict_min_version": "52.0"
        }
    },
    "permissions": [
        "identity",
        "*://www.googleapis.com/*",
        "*://accounts.google.com/*",
        "bookmarks",
        "storage"
    ]
}
